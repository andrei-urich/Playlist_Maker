<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openPlRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_view_bg"
    tools:context=".ui.library.OpenPlaylistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/openPlConstrLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_view_bg">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbOpenPlaylist"
            style="@style/player_toolbar"
            android:background="@color/search_view_bg"
            app:layout_constraintHorizontal_bias="0.0"
            app:titleTextAppearance="@style/my_toolbar"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/playlistImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/placeholder_big"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_24"
            android:fontFamily="@font/ys_display_bold"
            android:textColor="@color/text_always_black"
            android:textSize="@dimen/h0"
            app:layout_constraintTop_toBottomOf="@id/playlistImage"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text_always_black"
            android:textSize="@dimen/h18"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Description" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text_always_black"
            android:textSize="@dimen/h18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            tools:text="300 минут" />

        <ImageView
            android:id="@+id/ivDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:src="@drawable/dot_divider"
            app:layout_constraintStart_toEndOf="@+id/tvDuration"
            app:layout_constraintTop_toBottomOf="@id/tvDescription" />

        <TextView
            android:id="@+id/tvTracksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text_always_black"
            android:textSize="@dimen/h18"
            app:layout_constraintStart_toEndOf="@id/ivDivider"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            tools:text="98 треков" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginVertical="@dimen/margin_16"
            android:src="@drawable/ic_share_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDuration" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginVertical="@dimen/margin_16"
            android:src="@drawable/dots_menu"
            app:layout_constraintStart_toEndOf="@id/ivShare"
            app:layout_constraintTop_toBottomOf="@id/tvDuration"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_bottom_sheet_background"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/tracksBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_drawable"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/bsDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bottom_sheet_divider_margin_top"
            android:src="@drawable/divider_bottom_sheet" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksBottomSheetRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/bottom_sheet_recicler_margin_top"
            android:layout_weight="1" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_drawable"
        android:orientation="vertical"
        app:behavior_hideable="true"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/menuDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_sheet_divider_margin_top"
            android:src="@drawable/divider_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/playlistCover"
            android:layout_width="@dimen/search_result_track_image_width"
            android:layout_height="@dimen/search_result_track_image_height"
            android:layout_marginHorizontal="@dimen/search_result_track_image_margin_left"
            android:layout_marginVertical="@dimen/search_result_track_image_margin_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menuDiv" />

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_result_track_name_margin_left"
            android:layout_marginTop="@dimen/search_result_track_name_margin_top"
            android:layout_marginEnd="@dimen/bottom_sheet_item_text_margin_end"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/h2"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/playlistCover"
            app:layout_constraintTop_toBottomOf="@id/menuDiv"
            tools:text="Название плейлиста" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_result_track_name_margin_left"
            android:layout_marginEnd="@dimen/bottom_sheet_item_text_margin_end"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxWidth="@dimen/search_result_artist_name_max_width"
            android:maxLines="1"
            android:textColor="@color/track_information"
            android:textSize="@dimen/h4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/playlistCover"
            app:layout_constraintTop_toBottomOf="@id/playlistName"
            tools:text="Исполнитель" />


        <TextView
            android:id="@+id/menuOption1"
            style="@style/settings_option_text_style"
            android:text="@string/menu_playlist_option1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistCover" />

        <TextView
            android:id="@+id/menuOption2"
            style="@style/settings_option_text_style"
            android:text="@string/menu_playlist_option2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menuOption1" />

        <TextView
            android:id="@+id/menuOption3"
            style="@style/settings_option_text_style"
            android:text="@string/menu_playlist_option3"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menuOption2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
