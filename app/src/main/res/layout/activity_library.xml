<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.library.LibraryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbLib"
        style="@style/my_toolbar"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/trackImageLib"
        style="@style/player_border_for_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/player_track_image_margin_top"

        android:src="@drawable/placeholder_big"
        app:layout_constraintTop_toBottomOf="@id/tbLib"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>