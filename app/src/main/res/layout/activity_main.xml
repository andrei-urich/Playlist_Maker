<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_padding"
    android:paddingTop="@dimen/screen_top_padding"
    android:paddingBottom="@dimen/screen_padding"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="@dimen/main_header_bottom_margin"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/app_name"
        android:textColor="@color/head_primary"
        android:textSize="@dimen/h1"

        />

    <Button
        android:id="@+id/btn_Search"
        style="@style/main_btn_style"
        android:text="@string/btn_search_main"
        app:icon="@drawable/ic_search" />


    <Button
        android:id="@+id/btn_Library"
        style="@style/main_btn_style"
        android:text="@string/btn_library_main"
        app:icon="@drawable/ic_mediateka" />

    <Button
        android:id="@+id/btn_Setup"
        style="@style/main_btn_style"
        android:text="@string/btn_setup_main"
        app:icon="@drawable/ic_setup" />


</androidx.appcompat.widget.LinearLayoutCompat>
