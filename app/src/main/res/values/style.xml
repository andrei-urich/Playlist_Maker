<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- стиль кнопок главного экрана -->
    <style name="main_btn_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/button_marginTop_main_scr</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:backgroundTint">@color/main_button</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_width</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconTint">@color/main_button_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- стиль кнопок экрана создания плейлиста -->
    <style name="new_playlist_btn_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/head_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/add_playlist_button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="edit_text_add_playlist_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textSelectHandle">@color/active_item_color</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="new_playlist_TextInput_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/new_playlist_edittext_height</item>
        <item name="android:layout_marginHorizontal">
            @dimen/new_playlist_edittext_horizontal_margin
        </item>
        <item name="boxStrokeColor">@color/box_stroke_selector</item>
        <item name="hintTextColor">@color/box_stroke_selector</item>
        <item name="cursorColor">@color/active_item_color</item>


    </style>

    <!-- стиль горизонтальных блоков меню настроек -->
    <style name="settings_options_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setup_options_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/screen_padding</item>
    </style>

    <!-- стиль текста пунктов меню -->
    <style name="settings_option_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/setup_options_height</item>
        <item name="android:layout_marginStart">@dimen/setting_option_margin_start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <!-- стиль текста пунктов Табов на экране Медиатека -->
    <style name="tabLayout_text_style" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="tabIndicatorColor">@color/text_primary</item>
        <item name="tabTextColor">@color/text_primary</item>
        <item name="tabSelectedTextColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabTextAppearance">@style/tabTextStyle</item>
    </style>

    <style name="tabTextStyle" parent="main_btn_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <!-- стиль кнопок меню -->
    <style name="settings_option_image_style">
        <item name="android:layout_width">@dimen/minButtonHeight</item>
        <item name="android:layout_height">@dimen/setup_options_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/screen_padding_small</item>
        <item name="android:paddingRight">@dimen/screen_padding_small</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:clickable">true</item>
        <item name="android:tint">@color/image_button</item>

    </style>

    <!-- стиль Тулбара -->
    <style name="my_toolbar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <!-- стиль Тулбара_экран Плейера -->
    <style name="player_toolbar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <!-- стиль текста плейсхолдеров  -->
    <style name="search_screen_placeholder_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
    </style>

    <!-- стиль кнопки "Обновить" -->
    <style name="refresh_btn_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/refresh_button_text</item>
        <item name="android:backgroundTint">@color/text_primary</item>
        <item name="cornerRadius">@dimen/refresh_button_radius</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- стиль переключателя темы в Настройках -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="android:checked">false</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/thumbTint</item>
        <item name="colorSecondary">@color/thumbTint</item>
    </style>


    <!-- стиль заголовка списка истории -->
    <style name="search_history_header_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">19sp</item>
    </style>


    <!-- расположение кнопок и изображения на экране плейера -->
    <style name="player_border_for_images">
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginHorizontal">24dp</item>
    </style>

    <!-- стиль деталей трека в плейере - левая часть -->
    <style name="player_track_details_LEFT_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/trackDetails</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- стиль деталей трека в плейере - правая часть -->
    <style name="player_track_details_RIGHT_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabLayoutIndicators">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPaddingBottom">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">0dp</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">08dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <!-- стиль текста в карточках плейлистов -->
    <style name="card_view_text_style" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- стиль текста в снеке-->
    <style name="snake_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/h3</item>

    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
    </style>


</resources>